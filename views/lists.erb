<ul id="lists">
  <%
=begin %>
  <% @lists.each_with_index do |list, index| %>
    <li class="<%= list_class(list) %>">
      <a href="/lists/<%= index %>">
        <h2><%= list[:name] %></h2>
        <p><%= todos_remaining_count(list) %> / <%= todos_count(list) %></p>
      </a>
    </li>
  <% end %>
  <%
=end %>
  <% sort_list_of(@lists).each do |list, id| %>
    <li class="<%= list_class(list) %>">
      <a href="/lists/<%= id %>">
        <h2><%= list[:name] %></h2>
        <p><%= todos_remaining_count(list) %> / <%= todos_count(list) %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>