<section id="todos">
  <header>
    <h2><%= @list[:name] %></h2>
    <a class="edit" href="<%= @id %>/edit" id="todos">Edit List</a>
  </header>
</section>

<ul id="todos">
  <% @list[:todos].each do |todo| %>
    <li><%= todo %></li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a href="/lists">All Lists</a>
<% end %>